

<%-include('../../layouts/Admin/header')%>
<%-include('../../layouts/Admin/sidebar')%>
<%-include('../../layouts/Admin/navbar')%>

 
         <!-- Begin Page Content -->
         <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Tables</h1>
            <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
                For more information about DataTables, please visit the <a target="_blank"
                    href="https://datatables.net">official DataTables documentation</a>.</p>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            
                                            <th>User Name</th>
                            
                                            <th>Heading</th>
                                           
                                            <th>Body</th>
                                            <th>Image</th>
                                            <th>status</th>
                                            <th colspan="3">Action</th>
                                            
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>User Name</th>
                                            <th>DATE</th>
                                            <th>Heading</th>
                                           
                                            <th>Body</th>
                                            <th>Image</th>
                                            <th>status</th>
                                            <th colspan="3">Action</th>
                                        </tr>
                                    </tfoot>
                                
                                    <tbody>
                                   
                                        <% blog_details.map((data) => { %>
                                        

                                            <tr>
                                                      
                                        <td><%= data.user_details.full_name %></td>  
                                        <td><%=moment(data.date).format('DD/MM/YY')%></td>  
                                          <td><%=data.heading%></td>
                                          <td><%-data.description%></td>
                                          <td><img src="../front/uploads/<%=data.image %>" width="150px" height="150px"></td>
                                            
                                            
                                           
                      <% if(data.status=== 'Active'){%>
                        <td><a href="/blog-details/status-change/<%= data._id%>" class="btn btn-success"> Active </a></td>
                     <% } else{%>
              
                      <td><a href="/blog-details/status-change/<%= data._id%>" class="btn btn-warning">Inactive </a></td>
              
                   <%  } %>
                                            
         <!-- edit delete -->
         <td>
            <div class="dropdown">

                <a type="button" id="dropdownMenuButton"
                    data-toggle="dropdown"><span
                        class="bi bi-three-dots-vertical"></span></a>

                <div class="dropdown-menu"
                    aria-labelledby="dropdownMenuButton">

                    
                    <a class="dropdown-item"
                        href="/blog-details/delete/<%= data._id%>">Delete</a>
                    <a class="dropdown-item"
                        href="">View</a>
                </div>
            </div>

        </td>
        

                                      
                                        
                                        
                                  
                                     
                                      
                                    </tr>
                                    <% })%>
                                        
                                  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <%-include('../../layouts/Admin/footer')%>
          